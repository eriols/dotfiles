[core]
    editor = vim
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab
[user]
    name = olsson
    email = erik.eo.olsson@gmail.com
[alias]
    ci = commit
    co = checkout
    cp = cherry-pick
    df = diff
    dc = diff --cached
    lol = log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit 
    l1 = log --format='%C(yellow)%h%C(reset) -%C(red bold)%d%C(reset) %s %C(green)(%cr) %C(cyan)<%an>%C(reset)'
    lg = log --format='%C(yellow)%h%C(reset) -%C(red bold)%d%C(reset) %s %C(green)(%cr) %C(cyan)<%an>%C(reset)' --graph
    lm = log --format='%C(yellow)%h%C(reset) -%C(red bold)%d%C(reset) %s %C(green)(%cr)%C(reset)' --author=neville
    pr = pull-request
    rb = rebase
    ri = rebase -i
    rw = rewind
    sh = show HEAD
    st = status
